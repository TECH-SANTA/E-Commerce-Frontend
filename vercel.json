{
    "version": 2,
    "rewrites": [
        { "src": "/(.*)", "destination": "/index.html" }
    ],
    "headers": [
        {
            "source": "/*",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data:;"
                }
            ]
        }
    ]
}
